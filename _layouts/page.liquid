---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title"{% if page.is_project %} style="text-align: center;"{% endif %}>{{ page.title }}</h1>
    <p class="post-description">{{ page.description | markdownify }}</p> <!-- Apply markdownify filter here -->
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
